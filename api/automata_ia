import os
import json
import urllib.request
from http.server import BaseHTTPRequestHandler

# üîê Variables d'environnement (√† d√©finir dans Vercel)
AIRTABLE_API_KEY = os.environ.get("AIRTABLE_API_KEY")
AIRTABLE_BASE_ID = os.environ.get("AIRTABLE_BASE_ID")
AIRTABLE_TABLE_NAME = os.environ.get("AIRTABLE_TABLE_NAME")  # "Monitoring_2"


def format_status(value: str) -> str:
    """Ajoute les ic√¥nes pour Sensor / Statut en fran√ßais."""
    if not value:
        return ""

    v = value.lower().strip()

    # Sensor
    if v == "log":
        return "üü¢ Log"
    if v == "erreur":
        return "üî¥ Erreur"

    # Statut
    if v == "succ√®s":
        return "üü¢ Succ√®s"
    if v == "√©chec":
        return "üî¥ √âchec"

    # fallback : on renvoie tel quel
    return value


class handler(BaseHTTPRequestHandler):

    def do_POST(self):
        # Lire le JSON envoy√© par Make
        length = int(self.headers.get("Content-Length", 0))
        raw_body = self.rfile.read(length)

        try:
            body = json.loads(raw_body)
        except Exception as e:
            self.send_response(400)
            self.end_headers()
            self.wfile.write(f"Invalid JSON: {e}".encode())
            return

        # URL Airtable (table unique Monitoring_2)
        url = f"https://api.airtable.com/v0/{AIRTABLE_BASE_ID}/{AIRTABLE_TABLE_NAME}"

        headers = {
            "Authorization": f"Bearer {AIRTABLE_API_KEY}",
            "Content-Type": "application/json"
        }

        # üß± Champs de base (logs simples)
        fields = {
            "Workflow": body.get("Workflow", ""),
            "Module": body.get("Module", ""),
            "Sensor": format_status(body.get("Sensor", "")),
            "Statut": format_status(body.get("Statut", "")),
            "Message": body.get("Message", "")
            # ‚ö†Ô∏è Pas de "Date" ‚Üí g√©r√©e par Airtable (Created time)
        }

        # üß† Champs IA (optionnels mais on les envoie quand m√™me)
        # Assure-toi que les colonnes existent dans Airtable
        fields["R√©sum√© global"] = body.get("ResumeGlobal", "")
        fields["Tendances d√©tect√©es"] = body.get("Tendances", "")
        fields["Modules √† risque"] = body.get("ModulesRisque", "")
        fields["Recommandations"] = body.get("Recommandations", "")
        fields["Top 3 priorit√©s"] = body.get("Priorites", "")

        fields["P√©riode analys√©e"] = body.get("Periode", "")
        fields["Total logs"] = body.get("TotalLogs", None)
        fields["Total erreurs"] = body.get("TotalErreurs", None)

        payload = json.dumps({"fields": fields}).encode()

        req = urllib.request.Request(
            url,
            data=payload,
            headers=headers,
            method="POST"
        )

        try:
            with urllib.request.urlopen(req) as response:
                # Si Airtable r√©pond 200, on renvoie OK √† Make
                self.send_response(200)
                self.end_headers()
                self.wfile.write(b"OK")
        except Exception as e:
            # En cas d'erreur Airtable (422, 404, etc.)
            self.send_response(500)
            self.end_headers()
            self.wfile.write(f"Airtable error: {e}".encode())
